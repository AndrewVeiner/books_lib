{% extends 'base.html.twig' %}

{% block title %}Form Authors{% endblock %}

{% block body %}
    <div class="container">
        <h2>Добавить автора</h2>
        <div class="card bg-dark text-white">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="textarea">Автор</label>
                </div>
                <label for="textarea">ФИО</label><br>
                {{ form_widget(form.name) }}
                <button class="btn btn-sm btn-secondary" type="submit">Добавить</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
