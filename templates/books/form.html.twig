{% extends 'base.html.twig' %}

{% block title %}Редактирование{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/normalize.css" />
    <link
            href="http://fonts.googleapis.com/css?family=Nunito:400,300"
            rel="stylesheet"
            type="text/css"
    />
    <link rel="stylesheet" href="/css/form.css">
{% endblock %}

{% block body %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.title) }}</label><br>
                    {{ form_widget(form.title) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.description) }}</label><br>
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.year) }}</label><br>
                    {{ form_widget(form.year) }}

                    <div class="form-control-feedback">{{ form_errors(form.year) }}</div>

                </div>
                <ul class="author">
                    <label for="textarea">Авторы</label><br>
                    {% for author in form.authors %}
                        <li>Автор - {{ form_widget(author.name) }}</li>
                    {% endfor %}

                </ul>

                <ul class="authors" data-prototype="{{ form_widget(form.authors.vars.prototype)|e('html_attr') }}"></ul>
            <div class="form-group">
                <label for="textarea">Загрузить обложку</label><br>
                {{ form_widget(form.file) }}
            </div>
                <button type="submit">Сохранить</button>
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/js/addAuthors.js" defer="defer"></script>
{% endblock %}


